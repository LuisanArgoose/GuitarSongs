<Page x:Class="Project_A.Pages.SongsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project_A.Pages"
      mc:Ignorable="d"
      Title="SongsPage" Width="1280" Height="700">

    <Grid Background="White">
        <ListBox x:Name="Listing" HorizontalAlignment="Left" Height="651" Margin="10,10,0,0" VerticalAlignment="Top" Width="290" Background="#FFE0E0E0" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding}" Height="111" Width="254"  Margin="10,10,0,0" Click="Button_Click"/>

                </DataTemplate>

            </ListBox.ItemTemplate>
        </ListBox>        
    </Grid>
</Page>
